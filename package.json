{
  "private": true,
  "name": "ncube",
  "license": "GPL-3.0",
  "author": "Christo <christo@cryptodrunks.net>",
  "repository": "https://github.com/critocrito/ncube.git",
  "scripts": {
    "compile": "yarn compile:prod",
    "compile:dev": "cross-env NODE_ENV=development webpack-dev-server --mode development --open chromium",
    "compile:prod": "cross-env NODE_ENV=production webpack --mode production",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export",
    "fix": "yarn lint --fix",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src/ts test/ts webpack*.js test/test-setup.js",
    "start": "concurrently --kill-others \"yarn cosmos\" \"yarn test:watch\" \"yarn type-check:watch\" \"yarn compile:dev\"",
    "test": "ava --verbose",
    "test:watch": "yarn test --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -w",
    "verify": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "@reach/router": "^1.3.3",
    "classnames": "^2.2.6",
    "formik": "^2.1.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tachyons": "^4.11.1",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@testing-library/react": "^10.2.1",
    "@types/classnames": "^2.2.10",
    "@types/reach__router": "^1.3.5",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/yup": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "autoprefix": "^1.0.1",
    "ava": "^3.9.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-ava": "^10.3.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unicorn": "^20.1.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.2.10",
    "mini-css-extract-plugin": "^0.9.0",
    "pirates": "^4.0.1",
    "postcss": "^7.0.27",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-insert": "^1.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-svg": "^3.0.0",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "react-cosmos": "^5.4.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "typescript-language-server": "^0.4.0",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-copy-plugin": "^0.0.4",
    "webpack-dev-server": "^3.11.0"
  },
  "ava": {
    "require": [
      "ts-node/register/transpile-only",
      "jsdom-global/register",
      "./test/test-setup.js"
    ],
    "files": [
      "test/ts/**/*",
      "test/ts/helpers/**/*"
    ],
    "ignoredByWatcher": [
      "{coverage,doc,resources,scripts,target,__fixtures__}/**",
      "src/{rs,css,cljs,clj}/**"
    ],
    "extensions": [
      "ts",
      "tsx"
    ],
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/ts/helpers/**/*"
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/typescript",
      "@babel/react"
    ],
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "2018",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "extends": [
      "airbnb-typescript",
      "airbnb/hooks",
      "plugin:@typescript-eslint/recommended",
      "plugin:ava/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended",
      "prettier/react",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "ava",
      "simple-import-sort",
      "promise",
      "unicorn",
      "prettier"
    ],
    "rules": {
      "object-curly-spacing": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true,
          "variables": true
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true,
          "variables": true,
          "typedefs": true
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "webpack.config.js",
            "webpack.cosmos.js",
            "test/ts/**/*.ts",
            "test/test-setup.js",
            "scripts/**/*.js"
          ]
        }
      ],
      "simple-import-sort/sort": "error",
      "react/button-has-type": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "unicorn/prevent-abbreviations": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "error"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "! git rev-parse --abbrev-ref HEAD | grep -q master || (make verify && lint-staged)"
    }
  },
  "lint-staged": {
    "{*.json,*rc}": [
      "prettier --parser json --write"
    ],
    "**/package.json": [
      "prettier-package-json --write"
    ],
    "{*.js,*.ts,*.tsx}": [
      "eslint --fix"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-insert": {},
      "postcss-custom-properties": {
        "preserve": false
      },
      "postcss-preset-env": {
        "browsers": "> 0.2%"
      },
      "autoprefixer": {}
    }
  },
  "prettier": {
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "always",
    "tabWidth": 2
  }
}
