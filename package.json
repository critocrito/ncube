{
  "private": true,
  "name": "ncube",
  "license": "GPL-3.0",
  "author": "Christo <christo@cryptodrunks.net>",
  "repository": "https://github.com/critocrito/ncube.git",
  "scripts": {
    "compile": "yarn compile:prod",
    "compile:dev": "cross-env NODE_ENV=development webpack serve --mode development --open chromium",
    "compile:prod": "cross-env NODE_ENV=production webpack --mode production",
    "fix": "yarn lint --fix",
    "postinstall": "husky install",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src/ts test/ts webpack*.js test/test-setup.js",
    "lint:web-ext": "web-ext lint -s target/web-ext",
    "prepare": "husky install",
    "start": "concurrently --kill-others \"yarn test:watch\" \"yarn type-check:watch\" \"yarn compile:dev\" \"yarn web-ext:watch\"",
    "test": "ava --verbose",
    "test:watch": "yarn test --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -w",
    "verify": "yarn lint && yarn type-check && yarn test",
    "web-ext": "web-ext run -s target/web-ext",
    "web-ext:chromium": "yarn web-ext -t chromium",
    "web-ext:dev": "webpack --mode development --config webpack.web-ext.js",
    "web-ext:prod": "webpack --mode production --config webpack.web-ext.js",
    "web-ext:watch": "yarn web-ext:dev -w"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@sugarcube/source-types": "^0.1.6",
    "@xstate/react": "^1.3.1",
    "clsx": "^1.1.1",
    "copy-to-clipboard": "^3.3.1",
    "d3-dsv": "^2.0.0",
    "date-fns": "2.19.0",
    "formik": "^2.2.6",
    "humanize-plus": "^1.8.2",
    "match-sorter": "^6.3.0",
    "pubsub-js": "^1.9.3",
    "react": "^17.0.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-datepicker": "3.6.0",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.3.1",
    "react-select": "^4.2.1",
    "react-table": "^7.6.3",
    "swiper": "^6.6.2",
    "video.js": "^7.11.4",
    "webextension-polyfill": "^0.7.0",
    "xstate": "^4.17.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@mdx-js/loader": "^1.6.22",
    "@tailwindcss/forms": "^0.3.2",
    "@testing-library/react": "^11.2.5",
    "@types/classnames": "^2.2.11",
    "@types/d3-dsv": "^2.0.1",
    "@types/fetch-mock": "^7.3.3",
    "@types/humanize-plus": "^1.8.0",
    "@types/match-sorter": "^6.0.0",
    "@types/mdx-js__react": "^1.5.3",
    "@types/pubsub-js": "^1.8.2",
    "@types/react": "^17.0.3",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-datepicker": "^3.1.7",
    "@types/react-dom": "^17.0.2",
    "@types/react-select": "^4.0.13",
    "@types/react-table": "^7.0.29",
    "@types/swiper": "^5.4.2",
    "@types/video.js": "^7.3.15",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "autoprefix": "^1.0.1",
    "autoprefixer": "^10.2.5",
    "ava": "^3.15.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.0",
    "copy-webpack-plugin": "^8.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^5.1.3",
    "jsdom": "^16.5.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.3.9",
    "pirates": "^4.0.1",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.1.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-svg": "^3.0.0",
    "postcss-url": "^10.1.1",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3",
    "tailwindcss": "^2.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "typescript-language-server": "^0.5.1",
    "url-loader": "^4.1.1",
    "web-ext": "^6.0.0",
    "web-ext-types": "^3.2.1",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-extension-manifest-plugin": "^0.6.0"
  },
  "ava": {
    "require": [
      "ts-node/register/transpile-only",
      "jsdom-global/register",
      "./test/test-setup.js"
    ],
    "files": [
      "test/ts/**/*",
      "test/ts/helpers/**/*"
    ],
    "ignoredByWatcher": [
      "{coverage,doc,resources,scripts,target,__fixtures__}/**",
      "src/{rs,css,cljs,clj}/**"
    ],
    "extensions": [
      "ts",
      "tsx"
    ],
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/ts/helpers/**/*"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "chrome": 55,
            "safari": 11,
            "edge": 15
          }
        }
      ],
      "@babel/typescript",
      "@babel/react"
    ],
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "2018",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "extends": [
      "airbnb-typescript",
      "airbnb/hooks",
      "plugin:@typescript-eslint/recommended",
      "plugin:ava/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "ava",
      "simple-import-sort",
      "promise",
      "unicorn",
      "prettier"
    ],
    "rules": {
      "object-curly-spacing": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true,
          "variables": true,
          "typedefs": true
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "webpack.*.js",
            "test/ts/**/*.ts",
            "test/test-setup.js",
            "scripts/**/*.js",
            "src/ts/__fixtures__/**/*.tsx"
          ]
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "react/button-has-type": "off",
      "react/require-default-props": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "unicorn/consistent-destructuring": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-useless-undefined": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "error"
        }
      }
    ]
  },
  "lint-staged": {
    "{*.json,*rc}": [
      "prettier --parser json --write"
    ],
    "**/package.json": [
      "prettier-package-json --write"
    ],
    "{*.js,*.ts,*.tsx}": [
      "eslint --fix"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "tailwindcss": {},
      "postcss-flexbugs-fixes": {},
      "postcss-preset-env": {
        "autoprefixer": {
          "flexbox": "no-2009"
        },
        "stage": 3,
        "features": {
          "custom-properties": false
        }
      },
      "postcss-url": {
        "url": "inline"
      }
    }
  },
  "prettier": {
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "always",
    "tabWidth": 2
  }
}
